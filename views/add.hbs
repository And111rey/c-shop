<h1>Add new course </h1>

<hr>

<form action="/add" method="POST">
      <div class="input-field">
          <input name="title"  id="title" type="text" class="validate" required/>
          <label for="title">Cours name</label>
        <span class="helper-text" data-error="enter course name"></span>
        </div>


        <div class="input-field ">
            <input  name="price" id="price" type="number" class="validate" required min="1">
            <label for="price">Course PRICE</label>
            <span class="helper-text" data-error="enter price" ></span>
        </div>

        <div class="input-field ">
            <input  name="img" id="img" type="text" class="validate" required>
            <label for="img">Img URL</label>
            <span class="helper-text" data-error="enter image URL" data-success="right">Helper text</span>
        </div>

        <button class="btn btn-primary"> Add course</button>   
</form>

