        <thead>
            <tr>
                <th>Course name</th>
                <th>quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small">DELETE</button>
